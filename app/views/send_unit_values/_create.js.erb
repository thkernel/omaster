$("ul.errors").html("");
<% if @send_unit_value.errors.any? %>
  <% @send_unit_value.errors.full_messages.each do |message| %>
 
    $("ul.errors").append($('<div class="c-alert c-alert--danger" > ').html("<%= message.html_safe %> "));
  <% end %>
<% else %>
  $(".send-unit-values").html("<%= escape_javascript(render 'index') %>");
  $("#send-unit-value-modal").modal("hide");
 
<% end %>