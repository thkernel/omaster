<%= form_with(model: remote_unit_value, local: false) do |form| %>
  <div class="modal-body">
    <ul class="errors">
    </ul>

 

  <div class="form-group">
    <%= form.label :sender, "Envoyeur", class: "required" %> <br />
    <%= form.text_field :sender, class: "form-control", placeholder: "N°Tête pont/ N°Boutique/N°Client",required: true %>
  </div>

  <div class="form-group">
    <%= form.label :receiver, "Recepteur", class: "required" %> <br />
    <%= form.text_field :receiver, class: "form-control", placeholder: "N°Tête pont",required: true %>
  </div>

   <div class="form-group">
    <%= form.label :amount, "Montant", class: "required" %>
    <%= form.number_field :amount, class: "form-control", required: true %>
  </div>

  </div><!-- modal body -->
  <div class="modal-footer">
    <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
    <%= form.submit  class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
  </div>
<% end %>
