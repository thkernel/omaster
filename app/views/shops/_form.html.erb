<%= form_with(model: shop, local: false) do |form| %>
  <div class="modal-body">
    <ul class="errors">
    </ul>

  <div class="form-group">
    <%= form.label :locality_id, "Localité", class: "required" %> <br />
    <%= form.collection_select(:locality_id, @localities, :id, :name, {prompt: "Sélectionner"}, class: "form-control", required: true) %> 
  </div>

  <div class="form-group">
    <%= form.label :name, "Nom", class: "required" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Nom" %>
  </div>

  <div class="form-group">
    <%= form.label :phone_number, "N° Téléphone", class: "required" %>
    <%= form.text_field :phone_number , class: "form-control" , placeholder: "N° Téléphone", required: true %>
  </div>

  

  </div><!-- modal body -->
  <div class="modal-footer">
    <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
    <%= form.submit  class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
  </div>
<% end %>
