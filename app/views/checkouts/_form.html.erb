<%= form_with(model: checkout, local: false) do |form| %>
  <div class="modal-body">
    <ul class="errors">
    </ul>

  <div class="form-group">
    <%= form.label :name, "Nom", class: "required" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Nom", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :minimum_balance, "Solde min." %>
    <%= form.number_field :minimum_balance, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :maximum_balance, "Solde max." %>
    <%= form.number_field :maximum_balance, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :current_balance, "Solde actuel" %>
    <%= form.number_field :current_balance, class: "form-control" %>
  </div>

  

  </div><!-- modal body -->
  <div class="modal-footer">
    <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
    <%= form.submit  class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
  </div>
<% end %>
