    <fieldset>
        <legend><h2>Profil</h2></legend>

        <%= form_with(model: profile, local: true) do |form| %>
          <h5><%= t('.edit_my_profile') %></h5>


            <div class="row">

                <div class="col-md-12">
                    <div class="form-group">
                        <%= form.label t(:full_name) %>
                        <%= form.text_field :full_name, class: "form-control", id: :profile_full_name, placeholder: "#{t(:full_name)}" %>
                    </div>

                    <div class="form-group">
                        <%= form.label t(:company_name) %>
                        <%= form.text_field :company_name, class: "form-control", id: :profile_company_name, placeholder: "#{t(:company_name)}" %>
                    </div>

                    
                    <div class="form-group">
                        <%= form.submit class: "btn btn-primary btn-block" %>
                    </div>
                </div>
            </div>
            <% end %>

    </fieldset>
