<% @customers.each do |customer| %>
      <tr>
        <td><%= customer_type(customer.customer_type_id).name %></td>
        <td><%= customer.company_name %></td>
        <td><%= customer.contact_name %></td>
        <td><%= customer.personal_phone %></td>
        <td><%= customer.fleet_number %></td>
        <td><%= customer.city %></td>
        
        <td>
	    <div class="action-buttons">
			<%= link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i>
'),  edit_customer_path(customer), title: "Modifier", remote: true %>




<%= link_to raw('<i class="fa fa-trash-o" aria-hidden="true"></i>
'), customer_delete_path(customer), remote: true, title: "Supprimer", class: "delete" %>
</div>
</td>
      </tr>
    <% end %>