<%= form_with(model: return_unit_value, local: false) do |form| %>
  <div class="modal-body">
    <ul class="errors">
    </ul>

  <div class="form-group">
    <%= form.label :reason, "Libellé", class: "required" %>
    <%= form.text_field :reason, class: "form-control", placeholder: "Libellé" %>
  </div>

  <div class="form-group">
    <%= form.label :customer_id, "Client" , class: "required"%> <br />
    <%= form.collection_select(:customer_id, @customers, :id, :contact_name, {prompt: "Sélectionner"}, class: "form-control", required: true) %> 
  </div>

  <div class="form-group">
    <%= form.label :amount, "Montant UV" %>
    <%= form.number_field :amount, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :agent_id, "Agent" %><br />
    <%= form.collection_select(:agent_id, @agents, :id, :phone, {prompt: "Sélectionner"}, class: "form-control", required: true) %> 
  </div>

  </div><!-- modal body -->
  <div class="modal-footer">
    <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
    <%= form.submit  class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
  </div>

<% end %>
