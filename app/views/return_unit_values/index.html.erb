<p id="notice"><%= notice %></p>

<h1>Return Unit Values</h1>

<table>
  <thead>
    <tr>
      <th>Reason</th>
      <th>Customer</th>
      <th>Amount</th>
      <th>Agent</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @return_unit_values.each do |return_unit_value| %>
      <tr>
        <td><%= return_unit_value.reason %></td>
        <td><%= return_unit_value.customer %></td>
        <td><%= return_unit_value.amount %></td>
        <td><%= return_unit_value.agent %></td>
        <td><%= return_unit_value.user %></td>
        <td><%= link_to 'Show', return_unit_value %></td>
        <td><%= link_to 'Edit', edit_return_unit_value_path(return_unit_value) %></td>
        <td><%= link_to 'Destroy', return_unit_value, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

