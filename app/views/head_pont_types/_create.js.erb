$("ul.errors").html("");
<% if @head_pont_type.errors.any? %>
  <% @head_pont_type.errors.full_messages.each do |message| %>
 
    $("ul.errors").append($('<div class="c-alert c-alert--danger" > ').html("<%= message.html_safe %> "));
  <% end %>
<% else %>
  $(".head-pont-types").html("<%= escape_javascript(render 'index') %>");
  $("#head-pont-type-modal").modal("hide");
 
<% end %>