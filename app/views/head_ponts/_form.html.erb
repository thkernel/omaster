<%= form_with(model: head_pont, local: false) do |form| %>
  <div class="modal-body">
    <ul class="errors">
    </ul>

  <div class="form-group">
    <%= form.label :head_pont_type_id, "Type", class: "required" %><br />
    <%= form.collection_select(:head_pont_type_id, @head_pont_types, :id, :name, {prompt: "Sélectionner"}, class: "form-control", required: true) %> 

  </div>

  <div class="form-group">
    <%= form.label :number, "N°Flotte", class: "required" %>
    <%= form.text_field :number, class: "form-control", placeholder: "N°Flotte", required: true %>
  </div>

  </div><!-- modal body -->
  <div class="modal-footer">
    <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
    <%= form.submit  class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
  </div>

<% end %>
